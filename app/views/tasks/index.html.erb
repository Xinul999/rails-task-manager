<h1>Test all Tasks</h1>


<% @tasks.each do |task| %>
  <div>
    <input type="checkbox" id="<%=task.title.downcase%>" />
    <label for="<%=task.title.downcase%>">
      <%= link_to task.title, task_path(task), class: "link" %>
    </label>
    <%= link_to "", task_path(task), method: :delete, data: { confirm: "Are you sure?" } , class: "far fa-trash-alt"%>
  </div>
<%end%>


<%=link_to "Add a new task", tasks_new_path %>


